{{# partial "titulo" }}
    <title>Consultorea.me</title>
{{/partial}}

{{# partial "contenidoDeCreacion" }}

    <head>
        <link rel="stylesheet"  href="/indicadoresCreacion.css">
    </head>

    <style>

        .contenidoCentral h2.centrar {
            padding-top: 0 !important;
        }

        .well {
            height: 100px;
            text-align: center;
        }

        .imagenes span{
            margin-right: 5px;
            color: #2B75BE;
        }

        .botonPrincipalDisabled{
            pointer-events:none;
            background-color: rgba(56, 56, 56, 0.18);
        }

        .botonSecundarioDisabled{
            pointer-events:none;
            background-color: rgba(56, 56, 56, 0.18);
            color: white;
        }

    </style>

    <body>

    <div class="col-sm-2"></div>


    <div class="col-sm-9">

        <div class="caja">

            <div class="well">

                {{formula}}

            </div>

            <div class="contenido">

                <div class="botonesICN">
                    <form>
                        <div class="btnDiv">
                            <input type="submit" name="cosaAOperar" value="Indicador"  class="botonSecundario botonSecundarioDisabled" style="width: 110px"/>
                        </div>
                        <div class="btnDiv">
                            <input type="submit" name="cosaAOperar" value="Cuenta"  class="botonSecundario botonSecundarioDisabled" style="width: 110px"/>
                        </div>
                        <div class="btnDiv">
                            <input type="submit" name="cosaAOperar" value="Numero"  class="botonSecundario botonSecundarioDisabled" style="width: 110px"/>
                        </div>
                    </form>
                </div>

                <div class="contenidoCentral">
                    <div>
                        <form method="POST" class="centrar">

                            <select class="form-control mi-control selector-indicador" name="nombre" id="selector-indicador" onchange="this.form.submit()">

                                <option disabled selected value> -- Seleccione un indicador -- </option>
                                {{#each indicadores}}
                                    <option value="{{nombre}}">{{nombre}}</option>
                                {{/each}}

                            </select>

                        </form>
                    </div>
                </div>

                <div class="botonesCalcu">
                    <form>
                        <div class="btnSuma">
                            <input type="submit" name="operador" value=" + " class="botonSecundario botonSecundarioDisabled"/>
                        </div>
                        <div class="btnResta">
                            <input type="submit" name="operador" value=" - " class="botonSecundario botonSecundarioDisabled"/>
                        </div>
                        <div class="btnMulti">
                            <input type="submit" name="operador" value=" * " class="botonSecundario botonSecundarioDisabled"/>
                        </div>
                        <div class="btnDiv">
                            <input type="submit" name="operador" value=" / " class="botonSecundario botonSecundarioDisabled"/>
                        </div>
                    </form>
                </div>

            </div>

            <div class="centrar" style="margin-left: 23px">
                <form>
                    <input type="submit" name="operador" value="Crear" class="botonPrincipal botonPrincipalDisabled"/>
                </form>
            </div>

        </div>

    </div>


    <div class="col-sm-1"></div>


    </body>

{{/partial}}

{{> indicadoresCreacionTemplate.hbs }}



